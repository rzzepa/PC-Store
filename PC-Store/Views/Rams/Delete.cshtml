@model PC_Store.Models.Ram

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie Pamięci RAM</h1>

<h3>Na pewno chcesz usunąć?</h3>
<div>
    <h4>Pamięci RAM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Producent
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producer)
        </dd>
        <dt class="col-sm-2">
            Kod producenta
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProducerCode)
        </dd>
        <dt class="col-sm-2">
            Linnia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Line)
        </dd>
        <dt class="col-sm-2">
            Typ złącza
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConnectorType)
        </dd>
        <dt class="col-sm-2">
            Rodzaj pamięci
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemoryType)
        </dd>
        <dt class="col-sm-2">
            Chłodzenie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cooling)
        </dd>
        <dt class="col-sm-2">
            Niskoprofilowe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LowProfile)
        </dd>
        <dt class="col-sm-2">
            Pojemność łączna [GB]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalCapacity)
        </dd>
        <dt class="col-sm-2">
           Liczba modułów
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfModules)
        </dd>
        <dt class="col-sm-2">
            Częstotliwość pracy [MHz]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Frequency)
        </dd>
        <dt class="col-sm-2">
            Opóźnienie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delay)
        </dd>
        <dt class="col-sm-2">
            Napięcie [V]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voltage)
        </dd>
        <dt class="col-sm-2">
            Podświetlenie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Backlight)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
    </form><br />
    <a asp-action="Index">
        <button type="button" class="btn btn-light btn-md mr-1 mb-2">
            Wróć
        </button>
    </a>
</div>
