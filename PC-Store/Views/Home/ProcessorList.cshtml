@model IEnumerable<PC_Store.Models.Processor>

@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "Index";
}



@using (Html.BeginForm())
{
    <p>
        Wpisz czego szukasz: @Html.TextBox("SearchString", null, new { @class = "form-control mr-sm-1", @type = "search"})<br/>
        <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Szukaj" />
    </p>
}

<h1><center>Procesory</center></h1>
<br /><br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("ProcessorList", new { page = page, SearchString="", sortOrder = ViewBag.NameSortParam }),
    new X.PagedList.Mvc.Common.PagedListRenderOptions
    {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
    })

<table class="table">
    <thead>
        <tr>
            <th>
                @if (ViewBag.NameSortParam == "producerASC")
                {
                    @Html.ActionLink("Producent", "ProcessorList", new { sortOrder = "producerASC" })
                }
                else
                {
                    @Html.ActionLink("Producent", "ProcessorList", new { sortOrder = "producerDESC" })
                }

            </th>
            <th>
                @if (ViewBag.NameSortParam == "lineASC")
                {
                    @Html.ActionLink("Linnia", "ProcessorList", new { sortOrder = "lineASC" })
                }
                else
                {
                    @Html.ActionLink("Linnia", "ProcessorList", new { sortOrder = "lineDESC" })
                }

            </th>
            <th>
                Chłodzenie
            </th>
            <th>
                Socket
            </th>
            <th>
                Ilość rdzeni
            </th>
            <th>
                Ilość wątków
            </th>
            <th>
                Zintegrowany układ graficzny
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr> 
            <td>
                @Html.DisplayFor(modelItem => item.Producer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cooling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocketType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfCores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfThreads)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntegratedGraphics)
            </td>
            <td>
                <a class="btn btn-success" asp-controller="ShoppingCart" asp-action="AddtoShoppingCart" asp-route-id="@item.ProductId">Dodaj do koszyka</a>
            </td>
        </tr>

        }
    </tbody>
</table>
<br />

@section Scripts{
    <script>
        $(document).ready(function () {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    </script>
}