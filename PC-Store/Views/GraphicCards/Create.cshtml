@model PC_Store.ViewModels.CreateGraphicCardViewModel

@{
    ViewData["Title"] = "Create";
}
@using (Html.BeginForm("Create", "GraphicCard", FormMethod.Post, new { enctype = "multipart/form-data" })) { }
<center>
    <h1>Dodawanie Karty graficznej</h1>

    <hr />
    <div>
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Producent
                    @Html.DropDownListFor(m => m.GraphicCard.Producer, new SelectList(Model.Producers, "CodeItem"), "--Wybierz--", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    Kod producenta
                    <input asp-for="@Model.GraphicCard.ProducerCode" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.ProducerCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Producent chipsetu
                    @Html.DropDownListFor(m => m.GraphicCard.ProducerChipset, new SelectList(Model.ChipsetProducers, "CodeItem"), "--Wybierz--", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    Rodzaj chipsetu
                    <input asp-for="@Model.GraphicCard.ChipsetType" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.ChipsetType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Taktowanie rdzenia
                    <input asp-for="@Model.GraphicCard.CoreClock" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.CoreClock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Taktowanie rdzenia w trybie boost
                    <input asp-for="@Model.GraphicCard.CoreClockBoost" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.CoreClockBoost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Typ złącza
                    <input asp-for="@Model.GraphicCard.ConnectorType" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.ConnectorType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Wersja złącza
                    <input asp-for="@Model.GraphicCard.VerConnectorType" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.VerConnectorType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Długość karty
                    <input asp-for="@Model.GraphicCard.CardLength" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.CardLength" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Rozdzielczość
                    @Html.DropDownListFor(m => m.GraphicCard.Resolution, new SelectList(Model.Resolution, "CodeItem"), "--Wybierz--", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    Rekomendowana moc zasilacza
                    <input asp-for="@Model.GraphicCard.RecommendedPSUPower" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.RecommendedPSUPower" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Podświetlenie LED
                    <input asp-for="@Model.GraphicCard.Led" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.Led" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Ilość pamięci RAM
                    <input asp-for="@Model.GraphicCard.AmountOfRAM" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.AmountOfRAM" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Rodzaj pamięci RAM
                    @Html.DropDownListFor(m => m.GraphicCard.TypeOfRAM, new SelectList(Model.MemoryTypes, "CodeItem"), "--Wybierz--", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    Szyna danych
                    <input asp-for="@Model.GraphicCard.DataBus" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.DataBus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Taktowanie pamięci
                    <input asp-for="@Model.GraphicCard.MemoryClock" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.MemoryClock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Typ chłodzenia
                    @Html.DropDownListFor(m => m.GraphicCard.CoolingType, new SelectList(Model.CoolingTypes, "CodeItem"), "--Wybierz--", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    Ilość wentylatorów
                    <input asp-for="@Model.GraphicCard.NumberOfFans" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.NumberOfFans" class="text-danger"></span>
                </div>
                <div class="form-group">
                    D-Sub
                    <input asp-for="@Model.GraphicCard.DSub" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.DSub" class="text-danger"></span>
                </div>
                <div class="form-group">
                    DisplayPort
                    <input asp-for="@Model.GraphicCard.DisplayPort" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.DisplayPort" class="text-danger"></span>
                </div>
                <div class="form-group">
                    HDMI
                    <input asp-for="@Model.GraphicCard.HDMI" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.HDMI" class="text-danger"></span>
                </div>
                <div class="form-group">
                    DVI
                    <input asp-for="@Model.GraphicCard.DVI" class="form-control" />
                    <span asp-validation-for="@Model.GraphicCard.DVI" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <div class="custom-file">
                        <input asp-for="File" type="file" class="custom-file-input" id="inputGroupFile01"
                               aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Wybierz zdjęcie</label>
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</center>
<div>
    <a asp-action="Index">
        <button type="button" class="btn btn-light btn-md mr-1 mb-2">
            Wróć
        </button>
    </a>
</div>

