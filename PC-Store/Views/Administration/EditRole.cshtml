@model PC_Store.Views.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edycja uprawnień</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Id uprawnienia</label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nazwa uprawnienia</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="ListRoles" class="btn btn-primary">Anuluj</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Użytkownicy posiadający uprawnienie</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Nikt nie ma tego uprawnienia</h5>
            }
        </div>
        <div class="card-footer">

            <div class="card-footer">
                <a asp-controller="Administration" asp-action="EditUsersInRole"
                   asp-route-roleId="@Model.Id" class="btn btn-primary">
                   Zarządzanie uprawnieniem
                </a>
            </div>
        </div>
    </div>
</form>
