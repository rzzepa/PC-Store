@model IEnumerable<PC_Store.Models.Order>


<h1>Moje zamówienia</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Data zamówienia
            </th>
            <th>
                Koszt zamówienia
            </th>
            <th>
                Adres
            </th>
            <th>
                Miasto
            </th>
            <th>
                Kod pocztowy
            </th>
            <th>
                Kraj
            </th>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderPlaced)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.OrderId">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
