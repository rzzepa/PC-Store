@model PC_Store.Infrastructure.PaginatedList<Processor>

@{
    ViewData["Title"] = "Index";
}

<h1><center>Procesory - Panel</center></h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-success btn-md mr-1 mb-2">
            Dodaj
        </button>
    </a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Wyszukaj: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Szukaj" class="btn btn-primary" />
            <a asp-action="Index">
                <button type="button" class="btn btn-success">
                    Wróć do pełnej listy
                </button>
            </a>
        </p>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ProdSortParm"]">Producent</a>
            </th>
            <th>
                Linnia
            </th>
            <th>
                Chłodzenie
            </th>
            <th>
                Socket
            </th>
            <th>
                Ilość rdzeni
            </th>
            <th>
                Ilość wątków
            </th>
            <th>
                Częstotliwość taktowania procesora [GHz]
            </th>
            <th>
                Częstotliwość maksymalna Turbo [GHz]
            </th>
            <th>
                Zintegrowany układ graficzny
            </th>
            <th>
                Odblokowany mnożnik
            </th>
            <th>
                Architektura [bit]
            </th>
            <th>
                Rodzaje obsługiwanej pamięci
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Producer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Line)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cooling)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SocketType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfCores)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfThreads)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProcessorClockFrequency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TurboMaximumFrequency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IntegratedGraphics)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnlockedMultiplier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Architecture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypesOfSupportedMemory)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-primary btn-md mr-1 mb-2">
                            Edytuj
                        </button>
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-info btn-md mr-1 mb-2">
                            Szczegóły
                        </button>
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">

                        <button type="button" class="btn btn-danger btn-md mr-1 mb-2">
                            Usuń
                        </button>
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>
<br />

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<center>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        <button type="button" class="btn btn-secondary btn-md mr-1 mb-2">
            Poprzednia strona
        </button>
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        <button type="button" class="btn btn-secondary btn-md mr-1 mb-2">
            Następna strona
        </button>
    </a>
</center>
<a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
    <button type="button" class="btn btn-light btn-md mr-1 mb-2">
        Wróć
    </button>
</a>